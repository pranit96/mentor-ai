{
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build" },
    { "src": "server/src/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/src/$1" },
    { "src": "/(.*)", "dest": "client/build/$1" }
  ],
  "public": false,
  "cleanUrls": true,
  "trailingSlash": false
}